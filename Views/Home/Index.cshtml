
<html>
    <head>
        <title>

        </title>
        <style>
            body {margin:0px;
            }
            #container {height:600px;width:100%;background-color:blue;
            }
            #container-left {height:600px;width:20%;background-color:#00ffe5;float:left;
            }
            #container-mid {overflow:auto;height:600px;width:60%;background-color:aliceblue;float:left;
            }
            #container-right {height:600px;width:20%;background-color:#00ffe5;float:left;
            }
            #menu {margin:0px;padding:0px;
            }
            #menu>li {
                list-style: none;
                display: inline-block;
                padding:10px 0px;
                background-color:violet;
                margin-right:-1px;
            }
                #menu > li > a {text-decoration:none;color:white;padding:10px 25px;
                }
        </style>
    </head>
    <body>
<h2>
Welcome To INDIACART.COM   @if(Session["user"]!=null){<label style="margin-left:50px;color:red;">WELCOME @ViewBag.name</label><label style="margin-left:100px;">@Html.ActionLink("logout","logout")</label> }<label style="margin-left:50px;color:red;">@ViewBag.y</label><label style="margin-left:400px;">@Html.ActionLink("Cart", "Cart_list", new { num=1}) (@ViewBag.count)</label>
    </h2>
        @Html.Partial("_Menu")
<hr />
        <div id="container">
            @{
                //var q = ViewBag.prod1;
                var num = ViewBag.num;
            }
        <div id="container-left">
            Catagory<br /><hr />
            @foreach (var p in ViewBag.cat1)
            {
               <a href="~/Home/Index?x=@p.cat" >@p.cat</a><br />
            }
        </div>
        <div id="container-mid">
            @if(ViewBag.x=="")
            {
            foreach (var p in ViewBag.cat1)
            {
               <a href="~/Home/Index" style="color:red;">@p.cat</a><br />
                <div style="height:150px;width:100%;">
                @foreach (var q in ViewBag.prod1)
                {
                    if (q.Category==p.cat)
                    {
                        <a href="~/Home/Prod_details?x=@q.ID">
                        <div class="details" style="text-align:center;height:145px;width:90px;float:left;box-shadow:0px 0px 5px blue;margin:10px;background-color:#ced8dd;">
                            <img src="~/Images/@q.ProductImage" height="80" width="90" /><br />
                           <b> @q.ProductName </b><br />
                            Rs @q.ProductPrice /-<br />
                            Off @q.Offer %
                        </div>
                            </a>
                    }
                }
               </div>
                <br />
            }
            }
            else
            {
                <a href="~/Home/Index" style="color:red;">@ViewBag.x</a><br />
                <div style="height:150px;width:100%;">
                @foreach (var q in ViewBag.prod1)
                {
                    if (q.Category==ViewBag.x)
                    {
                       <a href="~/Home/Prod_details?x=@q.ID">

                            <div class="details" style="text-align:center;height:145px;width:90px;float:left;box-shadow:0px 0px 5px blue;margin:10px;background-color:#ced8dd;">
                            <img src="~/Images/@q.ProductImage" height="80" width="90" /><br />
                           <b> @q.ProductName </b><br />
                            Rs @q.ProductPrice /-<br />
                            Off @q.Offer %
                        </div>
                           </a>
                    }
                }
               </div>
                <br />
            }
                 
        </div>
         <div id="container-right">

        </div>
        </div>
    </body>
</html>