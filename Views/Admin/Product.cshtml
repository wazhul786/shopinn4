@model shopinn4.Models.Product

@{
    ViewBag.Title = "Product";
}


<html>
    <head>
        <title>

        </title>
        <style>
            body {margin:0px;
            }
            #container {height:600px;width:100%;background-color:blue;
            }
            #container-left {height:600px;width:20%;background-color:gray;float:left;
            }
            #container-mid {height:600px;width:60%;background-color:aliceblue;float:left;
            }
            #container-right {height:600px;width:20%;background-color:gray;float:left;
            }
            #menu {margin:0px;padding:0px;
            }
            #menu>li {
                list-style: none;
                display: inline-block;
                padding:10px 0px;
                background-color:blue;
                margin-right:-1px;
            }
                #menu > li > a {text-decoration:none;color:white;padding:10px 25px;
                }
        </style>
    </head>
    <body>
<h2>
Welcome <span style="color:red;">@Session["admin"]</span> <label style="margin-left:1000px;">@Html.ActionLink("Logoff","Logout")</label>
    </h2>
<hr />
        <div id="container">
        <div id="container-left">

        </div>
        <div id="container-mid">
<ul id="menu">
    <li><a href="~/Admin/Catagory">Add Catagory</a></li>
    <li><a href="~/Admin/Product">Add Product</a></li>
    <li><a href="~/Admin/Orders">View Orders</a></li>
    <li><a href="~/Admin/Feedback">View FeedBack</a></li>
</ul>

<h2>Product</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Product</legend>
        <p style="color:red;">@ViewBag.msg</p>
        <div class="editor-label">
            @Html.LabelFor(model => model.Category)
        </div>
        <div class="editor-field">
               <select name="Category">
               <option>Choose a catagory</option>
               @foreach (var p in ViewBag.list)
               {
                   <option value="@p.cat">@p.cat</option>
               }
           </select>
            @Html.ValidationMessageFor(model => model.Category)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProductName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProductName)
            @Html.ValidationMessageFor(model => model.ProductName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProductImage)
        </div>
        <div class="editor-field">
            <input type="file" name="ProductImage" />
            @Html.ValidationMessageFor(model => model.ProductImage)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProductPrice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProductPrice) Rs
            @Html.ValidationMessageFor(model => model.ProductPrice)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Offer)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Offer) %
            @Html.ValidationMessageFor(model => model.Offer)
        </div>

        <p>
            <input type="submit" value="Add Product" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}        </div>
         <div id="container-right">

        </div>
        </div>
    </body>
</html>

